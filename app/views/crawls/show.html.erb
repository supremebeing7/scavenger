<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<%= content_for :title, @crawl.name %>

<div class="row">
  <h1><%= @crawl.name %></h1>
  <div class="col-sm-4">
    <h5>Created by <%= link_to @crawl.user.name, @crawl.user %></h5>
    <% if current_user && @crawl.user_id == current_user.id %>
      <h6><%= link_to "Edit Hunt", edit_crawl_path(@crawl) %></h6>
    <% end %>


    <p><%= @crawl.description %></p>
  </div>

  <div class="col-sm-8">
    <%= link_to "Add Hunting Spots", new_place_path(crawl_id: @crawl.id), class: "btn btn-custom btn-lg" %>
  </div>
</div>
<div class="row">
  <div class="col-sm-4">
    <h2>Here's the route!</h2>
    <ol>
      <% @crawl.places.each do |place| %>
        <li>
          <%= link_to place.name, place %><br>
          <%= place.address %><br>
          "<%= place.description %>"<br>
        </li>
      <% end %>
    </ol>
  </div>
  <div class="col-sm-8" style='width: 400px;'>
    <div id="map" style='width: 400px; height: 400px;'></div>
  </div>
</div>
<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
