<div id="new_message_form">

  <%= form_for @message do |f| %>
    <%= f.hidden_field :from_id, value: current_user.id if current_user %>
    <div class="form-group">
      <%= f.text_area :content, :placeholder => 'Content', rows: 4, cols: 40 %>
    </div>
    <%= f.submit "Send", class: 'btn btn-custom btn-xs' %>
  <% end %>
</div>
