<%= content_for :title, "Messaging" %>

<h2>Message other hunters!</h2>

<div class="message_window">
  <ul class="no_bullet">
    <% @messages.each do |message| %>
      <li>
        <%= message.sender.name %>:
        <%= message.content %><br>
        <span class="timestamp">
          Sent <%= message.created_at.strftime("%r, %D") %>)
        </span>
      <li>
    <% end %>
    <span id="new_message"></span>
  <ul>
</div>

<%= render 'form' %>
